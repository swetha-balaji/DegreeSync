<header class="h-[100px] bg-[#075640] flex items-center justify-between gap-3">
    <a href="/"><h1 class="pl-4 font-bold text-3xl text-white hover:cursor-pointer">DegreeSync</h1></a>
    <% if (isAuthorized) { %>
        <h1 class="font-semibold text-xl text-white">Student - <%= student.studentid %> - <%= student.student_name %></h1>
        <form action="/logout" method="post" class="p-4">
            <button type="submit" class="p-4 text-white font-bold text-xl">Logout</button>
        </form>
    <% } %>
</header>