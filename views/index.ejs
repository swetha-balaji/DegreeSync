<div class="flex justify-center items-center h-full grid grid-cols-2">
    <div class="h-full w-full flex justify-center items-center">
        <img alt="woodward image" src="/images/charlotte.jpg" class="h-3/4 w-3/4" />
    </div>
    <form action="/login" method="post" class="flex flex-col items-center justify-between w-1/2 h-2/5 mx-auto">
        <div class="flex flex-col justify-center gap-3 flex-1 w-full">
            <h1 class="text-3xl text-[#075640] font-bold w-full">Sign in with your<br/> UNCC Credentials</h1>
            <input type="email" required class="p-3 text-lg font-bold border-2 rounded-lg <%= err ? 'border-red-500' : 'border-black' %>" placeholder="example@charlotte.edu" pattern="[a-zA-Z0-9._%+-]+@charlotte\.edu" title="Email must contain @charlotte.edu" name="email"/>
            <input type="password" required class="p-3 text-lg font-bold border-2 rounded-lg <%= err ? 'border-red-500' : 'border-black' %>" placeholder="password" name="password"/>
        </div>
        <div class="flex flex-col items-center gap-4">
            <% if (err) { %>
                <h1 class="text-red-500 font-semibold">Invalid Email or Password</h1>
            <% } %>
            <button type="submit" class="bg-[#075640] text-white px-3 py-2 rounded-lg text-2xl font-bold w-1/4 self-center min-w-[200px]">Login</button>
            <p>Don't have an account? <a href="/signup" class="text-blue-600 hover:underline">Create an account.</a></p>
        </div>
    </form>
</div>