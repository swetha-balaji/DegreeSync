<div class="grid grid-cols-5 h-full">
    <!-- Left Sidebar with Branding (around 40% of the page) -->
    <div class="col-span-2 bg-[#075640] flex flex-col justify-between items-center relative">
        <!-- DegreeSync in White Box with Rounded Corners (same as the login page) -->
        <div class="absolute top-6 left-0 bg-white px-8 py-5 rounded-r-lg">
            <h1 class="text-[#075640] text-3xl font-bold">DegreeSync</h1>
        </div>

        <!-- UNCC Logo and Copyright -->
        <div class="flex flex-col items-center mb-12 mt-auto">
            <img alt="UNCC Logo" src="/images/Logo.png" class="h-full w-full object-contain max-h-[320px]" />
            <p class="text-white mt-4 text-sm">Copyright Â© 2024 DegreeSync</p>
        </div>
    </div>

    <!-- Right Side with Form (around 60% of the page) -->
    <div class="col-span-3 bg-white flex flex-col justify-center items-center">
        <form action="/signup" method="post" class="flex flex-col gap-6 p-12 w-2/3">
            <!-- Two-line Title with Increased Leading (line-height) -->
            <h1 class="font-light text-5xl text-[#075640] mb-6 text-center leading-[1.2]">
                Register here for a UNCC<br>
                <span class="block">Student Account</span>
            </h1>
            
            <div class="flex gap-6 w-full">
                <input type="text" name="firstName" required placeholder="First Name" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full placeholder-italic placeholder-[#075640] placeholder-opacity-50" pattern="[a-zA-Z]+"/>
                <input type="text" name="lastName" required placeholder="Last Name" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full placeholder-italic placeholder-[#075640] placeholder-opacity-50" pattern="[a-zA-Z]+"/>
            </div>
            
            <input type="email" name="email" required pattern="[a-zA-Z0-9]+@charlotte\.edu" placeholder="example@charlotte.edu" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full placeholder-italic placeholder-[#075640] placeholder-opacity-50"/>
            <% if (err) { %>
                <h1 class="text-red-500 font-semibold text-center">A user with that email already exists.</h1>
            <% } %>
            <input type="password" name="password" required placeholder="password" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full placeholder-italic placeholder-[#075640] placeholder-opacity-50" />

            <!-- Classification Dropdown -->
            <select required name="classification" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full">
                <option selected disabled value="">Classification</option>
                <option value="Freshman">Freshman</option>
                <option value="Sophomore">Sophomore</option>
                <option value="Junior">Junior</option>
                <option value="Senior">Senior</option>
            </select>

            <!-- Concentration Dropdown -->
            <select required name="concentration" class="p-4 border-b-2 focus:outline-none focus:border-[#075640] text-2xl w-full">
                <option selected disabled value="">Concentration</option>
                <option value="AI, Robotics and Gaming-BS">AI, Robotics and Gaming</option>
                <option value="Bioinformatics-BS">Bioinformatics</option>
                <option value="Cybersecurity-BS">Cybersecurity</option>
                <option value="Data Science-BS">Data Science</option>
                <option value="Systems and Networks-BS">Systems and Networks</option>
                <option value="Web/Mobile Development and Software Engineering-BS">Web/Mobile Development and Software Engineering</option>
                <option disabled value="">&dArr; B.A. &dArr;</option>
                <option value="Human-Computer Interaction-BA">Human-Computer Interaction</option>
                <option value="Information Technology-BA">Information Technology</option>
                <option value="Bioinformatics-BA">Bioinformatics</option>
            </select>

            <button type="submit" class="bg-[#075640] px-8 py-4 text-white w-1/2 mx-auto rounded-lg text-3xl">Register</button>
            <p class="text-center text-lg mt-4">Already have an account? <a href="/" class="text-blue-700 hover:underline">Login</a></p>
        </form>
    </div>
</div>

